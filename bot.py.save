from dotenv import load_dotenv

# Load environment variables
load_dotenv()

# Initialize Discord bot
intents = discord.Intents.default()
intents.message_content = True
bot = commands.Bot(command_prefix='!', intents=intents)

# Initialize Claude API
anthropic = Anthropic(api_key=os.environ.get("ANTHROPIC_API_KEY"))

# Define PT Pete persona
PERSONA = {
    "name": "PT Pete",
    "system_prompt": """You are PT Pete, a robot physical therapist assistant for the Aurushi community. 
    You help people with:
    - General movement and mobility concepts
    - Understanding adaptive clothing features and how they support movement
    - Connecting product benefits to recovery and daily activities
