}

class PTPete:
    def __init__(self):
        self.conversation_history = {}
    
    async def respond(self, message, user_id):
        """Generate response using Claude API"""
        
        # Initialize conversation history for user if needed
        if user_id not in self.conversation_history:
            self.conversation_history[user_id] = []
        
        # Add user message to history
        self.conversation_history[user_id].append({
            "role": "user",
            "content": message
        })
        
        # Keep only last 10 messages to manage context
        if len(self.conversation_history[user_id]) > 10:
            self.conversation_history[user_id] = self.conversation_history[user_id][-10:]
        
        try:
            # Call Claude API
            response = anthropic.messages.create(
                model="claude-sonnet-4-20250514",
                max_tokens=500,
                system=PERSONA["system_prompt"],
                messages=self.conversation_history[user_id]
            )
            
            bot_response = response.content[0].text
            
            # Add bot response to history
            self.conversation_history[user_id].append({
                "role": "assistant",
                "content": bot_response
            })
            
            return bot_response
            
        except Exception as e:
            return f"Beep boop! 🤖 I'm having trouble connecting right now. Please try again in a moment."

# Initialize PT Pete
pt_pete = PTPete()

@bot.event
async def on_ready():
    print(f'🤖 PT Pete is online! Logged in as {bot.user}')
    print(f'Bot is in {len(bot.guilds)} server(s)')

@bot.event
async def on_message(message):
    # Ignore messages from the bot itself
    if message.author == bot.user:
        return
    
    # Check if bot is mentioned
    if bot.user.mentioned_in(message):
        # Get message content without mention
        content = message.content.replace(f'<@{bot.user.id}>', '').strip()
        
        # Get response from PT Pete
        response = await pt_pete.respond(content, message.author.id)
        
        # Send response with PT Pete branding
        embed = discord.Embed(
            description=response,
            color=discord.Color.from_rgb(216, 42, 18)
        )
        embed.set_author(
            name="PT Pete 🤖",
            icon_url=bot.user.avatar.url if bot.user.avatar else None
        )
        embed.set_footer(text="Robot PT Assistant | Not a replacement for professional medical care")
        
        await message.channel.send(embed=embed)
    
    await bot.process_commands(message)

